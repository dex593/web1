{
  "name": "bfang-manga",
  "version": "1.0.0",
  "description": "BFANG Team manga upload site",
  "main": "server.js",
  "scripts": {
    "prestart": "npm run styles:build",
    "start": "node server.js",
    "predev": "npm run styles:build",
    "dev": "node server.js",
    "test:forum:unit": "npm test --prefix sampleforum",
    "test:forum:smoke": "node scripts/forum-smoke-check.js",
    "test:forum": "npm run test:forum:unit && npm run test:forum:smoke",
    "forum:scope:audit": "node scripts/fix-forum-comment-scope.js",
    "forum:scope:fix": "node scripts/fix-forum-comment-scope.js --apply",
    "forum:notifications:fix": "node scripts/fix-forum-notification-links.js",
    "styles:split": "npm run styles:build",
    "styles:purge": "npm run styles:build",
    "styles:build": "tailwindcss -c tailwind.config.js -i ./public/styles.source.css -o ./public/styles.css --minify",
    "styles:watch": "tailwindcss -c tailwind.config.js -i ./public/styles.source.css -o ./public/styles.css --watch",
    "purge:tmp": "node scripts/purge-tmp.js",
    "backup:db": "node scripts/backup-db.js",
    "restore:db": "node scripts/restore-db.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.988.0",
    "@emoji-mart/data": "^1.2.1",
    "clean-css": "^5.3.3",
    "compression": "^1.8.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "emoji-mart": "^5.6.0",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.13.1",
    "sharp": "^0.34.5",
    "terser": "^5.46.0"
  },
  "devDependencies": {
    "flowbite": "^2.5.2",
    "lighthouse": "^12.8.2",
    "purgecss": "^7.0.2",
    "tailwindcss": "^3.4.17"
  }
}
